<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="pref_auto"
        android:title="Auto Mode"
        android:summary="Trip recording automatically starts upon power connection and stops upon disconnection"
        android:defaultValue="false" />


    <EditTextPreference
        android:key="pref_remote_ip"
        android:summary="remote ip address to streaming"
        android:title="Server IP"
        />


    <ListPreference
        android:title="Supported Resolutions"
        android:summary="Select the resolution"
        android:key="pref_resolution"
        />

</PreferenceScreen>
